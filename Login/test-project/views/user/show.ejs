<h1>CARRITO</h1>

<% if(typeof arregloIngredientes != 'undefined') {%>
<h3> Lista arreglo Ingredientes </h3>
<ul>
  <% for(var j=0; j< arregloIngredientes.length ;j++){%>
  <li> Id Usuario: <%=arregloIngredientes[j]%> </li>
  <% }%>
</ul>
<% }%>


<div class='container'>
  <h1><%= user.name %> </h1>
  <% if (user.admin) { %>
  <img src="/images/admin.png">admin
  <% } else { %>
  <img src="/images/pawn.png">pawn
  <% } %>
  <h3><%= user.title %> </h3>
  <hr>
  <h3>Correo: <%= user.email %> </h3>

  <a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Editar</a>
  <td><h2>Añadir ingredientes a la pizza</h2></td>
  <p>Que ingredientes le gustaria?</p>

  <form action="/pizza/createPizza" method="post">
    <input hidden
           type="text"
           name="id">

    <div class="btn-group-vertical">
      <a class="btn btn-medium btn-primary" href="/pizza/agregarIngrediente">Pepperoni</a>
      <a class="btn btn-medium btn-primary" href="/pizza/agregarIngrediente">Jamon</a>
      <a class="btn btn-medium btn-primary" href="/pizza/agregarIngrediente">Queso</a>
      <a class="btn btn-medium btn-primary" href="/pizza/agregarIngrediente">Piña</a>
      <a class="btn btn-medium btn-primary" href="/pizza/agregarIngrediente">Carne</a>
      <a class="btn btn-medium btn-primary" href="/pizza/agregarIngrediente">Pollo</a>
      <a class="btn btn-medium btn-primary" href="/pizza/agregarIngrediente">Todos</a>
    </div>
  </form>




</div>


